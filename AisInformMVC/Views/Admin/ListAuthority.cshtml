@model IEnumerable<LibraryService.KhowBase.Authority>

@{
  ViewBag.Title = "Админ панель: Список органов власти";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>Список сотрудников</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered table-hover table-responsive">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Terr.Name)</th>
                <th>@Html.DisplayNameFor(model => model.ViewAuth.Name)</th>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.SlName)</th>
                <th>Управление</th>
            </tr>

            @foreach (var item in Model)
            {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Terr.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.ViewAuth.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.SlName)</td>
                <td class="text-center actionbutton">
                    @Html.ActionLink("Редактировать", "EditAuthority", new { id = item.Id }, new { @class = "btn btn-primary btn-xs" })
                    @Html.ActionLink("Удалить", "DeleteAuthority", new { id = item.Id }, new { @class = "btn btn-danger btn-xs" })
                </td>
            </tr>
            }

        </table>
    </div>

    <div class="panel-footer">
        @Html.ActionLink("Добавить ОГВ", "CreateAuthority", null,
            new { @class = "btn btn-primary" })
    </div>
</div>







