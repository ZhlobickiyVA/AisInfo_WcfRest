@model IEnumerable<LibraryService.Ad>

@{
  ViewBag.Title = "Админ Панель: Список Обьявлений";
  //HtmlHelper.ClientValidationEnabled = false;
  //HtmlHelper.UnobtrusiveJavaScriptEnabled = false;
}




<div class="panel panel-default">
    <div class="panel-heading">
        <h3>Список объявлений</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-center">ID</th>
                <th>Заголовок</th>
                <th class="text-center" style="max-width:300px; min-width:150px;">Обьявление</th>
                <th class="text-center">Дата актуальности</th>
                <th class="text-center" style="min-width:225px;">Действия</th>
            </tr>
            @foreach (var item in @Model)
            {
            <tr>
                <td class="text-center">@item.Id</td>
                <td>@item.Header</td>
                <td>@item.Text</td>
                <td class="text-center">@item.TheValidity.ToShortDateString()</td>
                
                <td class="text-center actionbutton">
                    @Html.ActionLink("Редактировать", "EditAds", new { id = item.Id }, new { @class = "btn btn-primary btn-xs" })
                    
                    @Html.ActionLink("Удалить", "DeleteAd", new { id = item.Id }, new { @class = "btn btn-danger btn-xs" })
                </td>
            </tr>
            }
        </table>
    </div>
    
    <div class="panel-footer">
        @Html.ActionLink("Добавить обьявление", "CreateAd", null,
            new { @class = "btn btn-primary" })
    </div>
</div>


