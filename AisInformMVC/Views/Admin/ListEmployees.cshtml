@model IEnumerable<LibraryService.Employee>

@{
  ViewBag.Title = "Админ Панель: Список сотрудников";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>Список сотрудников</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered table-hover table-responsive">
            <tr>
                <th>@Html.DisplayNameFor(model => model.LastName)</th>
                <th>@Html.DisplayNameFor(model => model.FirstName)</th>
                <th>@Html.DisplayNameFor(model => model.MiddleName)</th>
                <th>@Html.DisplayNameFor(model => model.DateOfBirth)</th>
                <th>@Html.DisplayNameFor(model => model.Post)</th>
                <th class="text-center">Управление</th>
            </tr>
            @foreach (var item in Model)
            {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                <td>@Html.DisplayFor(modelItem => item.MiddleName)</td>
                <td>@Html.DisplayFor(modelItem => item.DateOfBirth)</td>
                <td>@Html.DisplayFor(modelItem => item.Post)</td>

                <td class="text-center actionbutton">
                    @Html.ActionLink("Редактировать", "EditEmployees", new { id = item.Id }, new { @class = "btn btn-primary btn-xs" })

                    @Html.ActionLink("Удалить", "DeleteEmployees", new { id = item.Id }, new { @class = "btn btn-danger btn-xs" })
                </td>
            </tr>
            }
        </table>
    </div>

    <div class="panel-footer">
        @Html.ActionLink("Добавить сотрудника", "CreateEmployees", null,
            new { @class = "btn btn-primary" })
    </div>

</div>








