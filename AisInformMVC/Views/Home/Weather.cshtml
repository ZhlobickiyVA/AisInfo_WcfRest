@using LibraryService
@model RootObject

<div class="panel Weather">
    <div class="panel-heading">
        Погода сегодня
    </div>
    <div class="panel-body">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6" style="text-align:center;">
                    @{ string path = "/Image/Weather/" + Model.current_observation.icon + ".gif";}
                    <img src="@path" />
                    <p class="text-center">
                        <span>@Model.current_observation.weather</span>
                    </p>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6" style="text-align:center;">
                    <span class="temp">@Model.current_observation.temp_c °C</span>
                    <p>Ощущается Как @Model.current_observation.feelslike_c °C</p>
                </div>
                <div class="col-lg-12 mt20">
                    <table class="Weather">
                        <tr>
                            <td>Температура с учетом ветра</td>
                            <td>@Model.current_observation.feelslike_c °C</td>
                        </tr>
                        <tr>
                            <td>Ветер</td>
                            <td>@Model.current_observation.wind_dir</td>
                        </tr>
                        <tr>
                            <td>Давление</td>
                            <td>@Model.current_observation.pressure_mb мм рт.ст.</td>
                        </tr>
                        <tr>
                            <td>Влажность воздуха</td>
                            <td>@Model.current_observation.relative_humidity</td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>