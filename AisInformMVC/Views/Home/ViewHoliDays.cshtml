@using LibraryService
@model IEnumerable<Holiday>

<div class="panel panel-headline ">
    <div class="panel-heading">
        <h2 class="text-center">Праздники</h2>
        <hr style="margin:5px;">
    </div>
    <div class="panel-body">
        <div class="list-group BrList">
            
            @if (@Model.Count() !=0)
             {
              foreach (var p in @Model)
              {
                <div class="list-group-item">
                    <span class="glyphicon glyphicon-list">&nbsp;</span>
                    @p.Name
                </div>
              }
            }
            else
            {
            <div>
                <h5 class="text-center">Сегодня нет праздников.</h5>
            </div>
            }


            
        </div>
    </div>
</div>