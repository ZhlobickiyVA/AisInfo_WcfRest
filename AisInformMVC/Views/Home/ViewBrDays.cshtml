@using LibraryService
@model IEnumerable<Employee>


<div class="panel panel-headline ">
    <div class="panel-heading">
        <h2 class="text-center">Дни рождения</h2>
        <h4 class="text-center">@ViewBag.Month</h4>
        <hr style="margin:5px;">
    </div>
    <div class="panel-body">
        <div class="list-group BrList">

            @if (@Model.Count() != 0)
            {

                foreach (var p in @Model)
                {
                <div class="list-group-item">
                    @if (p.DateOfBirth.Day == DateTime.Now.Day)
                    {
                      <span class="glyphicon glyphicon-gift " style="color:red; ">&nbsp;</span>
                    }
                    else
                    { 
                    <span class="glyphicon glyphicon-gift">&nbsp;</span>
                    }
                    @p.GetShortName() 
                    @p.DateOfBirth.Day.ToString("D2").@p.DateOfBirth.Month.ToString("D2") 
                </div>
                }

            }
            else
            {
            <div>
                <h5 class="text-center">Сегодня нет иммениников.</h5>
            </div>
            }


        </div>
    </div>
</div>