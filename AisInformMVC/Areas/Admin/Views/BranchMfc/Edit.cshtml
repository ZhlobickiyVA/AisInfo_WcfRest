@using LibraryService
@model LibraryService.Entities.BranchMFC

@{
  ViewBag.Title = "Редактирование графика работы МФЦ";
}

@section Header
{
    <link href="~/Content/StyleSheduler.css" rel="stylesheet" />
}



<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">


            <div class="panel">
                <div class="panel-heading">
                    <h3>@ViewBag.Title</h3>
                </div>
                @using (Html.BeginForm("Edit", "BranchMFC", FormMethod.Post))
                {
                @Html.AntiForgeryToken()
                <div class="panel-body">


                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.Id)



                        <div class="form-group mb20">
                            @Html.LabelFor(model => model.NameMFC, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">

                                @Html.EditorFor(model => model.NameMFC, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.NameMFC, "", new { @class = "text-danger" })
                            </div>
                        </div>


                        @for (int i = 0; i < Model.ListWorkTime.Count; i++)
                        {

                        <div class="row">
                            <label class="col-md-2 control-label">@Util.NameDayOfWeek[i]</label>
                            @{Model.ListWorkTime[i].NumberDayOfWeek = i;}
                            @Html.HiddenFor(model => Model.ListWorkTime[i].NumberDayOfWeek, i.ToString())

                            @Html.LabelFor(model => model.ListWorkTime[i].TimeBegin, htmlAttributes: new { @class = "control-label col-md-1" })
                            <div class="col-md-4">
                                @*@Html.TextBoxFor( model=> item.TimeBegin, new { @class = "form-control", type = "time" })*@

                                @Html.TextBoxFor(Model => Model.ListWorkTime[i].TimeBegin, new { @class = "form-control", type = "time", value = "10:00" })

                                @Html.ValidationMessageFor(model => model.ListWorkTime[i].TimeBegin, "", new { @class = "text-danger" })
                            </div>


                            @Html.LabelFor(model => model.ListWorkTime[i].TimeEnd, htmlAttributes: new { @class = "control-label col-md-1" })
                            <div class="col-md-4">
                                @*@Html.TextBoxFor( model=> item.TimeBegin, new { @class = "form-control", type = "time" })*@

                                @Html.TextBoxFor(Model => Model.ListWorkTime[i].TimeEnd, new { @class = "form-control", type = "time", value = "10:00" })

                                @Html.ValidationMessageFor(model => model.ListWorkTime[i].TimeEnd, "", new { @class = "text-danger" })
                            </div>
                        </div>
                              }
                    </div>
                </div>
                              }
            </div>

        </div>
    </div>


    <div class="row">

        <div class="col-lg-4">
            <div class="panel">
                <div class="panel-heading">

                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-lg-9" style="margin:0px; padding:0px; width:70%;">
                                <h3 style="margin:0px;">Список отделов и подразделения</h3>
                            </div>
                            <div class="col-lg-3" style="margin:0px; padding:0px; width:30%; text-align:right;">
                                <a class="btn btn-success btn-xs"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span></a>
                                <a class="btn btn-warning btn-xs"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                                <a class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-minus" aria-hidden="true"></span></a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel-body">


                    <select name="Department" size="20" style="width:100%;" class="form-control SelectControl">
                        @foreach (var dep in Model.ListDepartament)
                        {
                        <option value="@dep.Id">@dep.Name</option>
                        }
                    </select>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="panel">
                <div class="panel-heading">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-lg-9" style="margin:0px; padding:0px; width:70%;">
                                <h3 style="margin:0px;">Список мест размещения</h3>
                            </div>
                            <div class="col-lg-3" style="margin:0px; padding:0px; width:30%; text-align:right;">
                                <a class="btn btn-success btn-xs"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span></a>
                                <a class="btn btn-warning btn-xs"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                                <a class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-minus" aria-hidden="true"></span></a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel-body">


                    <select name="Placement" size="20" style="width:100%;" class="form-control SelectControl">
                       

                    </select>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="panel">
                <div class="panel-heading">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-lg-9" style="margin:0px; padding:0px; width:70%;">
                                <h3 style="margin:0px;">Список рабочих мест</h3>
                            </div>
                            <div class="col-lg-3" style="margin:0px; padding:0px; width:30%; text-align:right;">
                                <a class="btn btn-success btn-xs"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span></a>
                                <a class="btn btn-warning btn-xs"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                                <a class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-minus" aria-hidden="true"></span></a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel-body">


                    <select name="Workplace" size="20" style="width:100%;" class="form-control SelectControl">
                       


                    </select>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="panel">
                <div class="panel-footer">
                    <input type="submit" value="Сохранить" class="btn btn-primary" />
                    @Html.ActionLink("Отменить", "Index", null, new { @class = "btn btn-default" })
                </div>
            </div>
        </div>

    </div>




</div>